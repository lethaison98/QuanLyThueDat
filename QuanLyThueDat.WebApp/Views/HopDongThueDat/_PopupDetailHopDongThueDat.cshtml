@{
    Layout = null;
}
<div class="modal fade" id="popupDetailHopDongThueDat" data-backdrop="static" role="dialog">
    <div class="modal-dialog modal-xl">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm mới hợp đồng thuê đất</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="min-height:600px">
                <div class="row col-sm-12" id="FormDetailHopDongThueDat">
                    <div class="form-group col-md-6">
                        <div class="d-flex">
                            <h5>Số hợp đồng</h5>

                            &nbsp; &nbsp;<h5><a href="#" style="color: gold" class="fa fa-folder" id="btnSelectFileHopDongThueDat"></a> &nbsp;</h5>
                            <input type="file" id="fileHopDongThueDat" multiple="" style="display: none;">
                            <div class="fileDinhKem" data-name="FileHopDongThueDat" data-id="0">
                            </div>
                        </div>
                        <input type="hidden" class="form-control" data-name="IdHopDongThueDat" value="0">
                        <input type="text" class="form-control" data-name="SoHopDong" required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Tên hợp đồng</h5>
                        <input type="text" class="form-control" data-name="TenHopDong" required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Doanh nghiệp</h5>
                        <select class="form-control select2 ddDoanhNghiep" style="width: 100%;">
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Ngày ký</h5>
                        <input type="text" class="form-control" data-name="NgayKyHopDong" placeholder='dd/mm/yyyy' required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Cơ quan ký hợp đồng</h5>
                        <input type="text" class="form-control" data-name="CoQuanKy" required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Người ký hợp đồng</h5>
                        <input type="text" class="form-control" data-name="NguoiKy" required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Ngày hiệu lực hợp đồng</h5>
                        <input type="text" class="form-control" data-name="NgayHieuLucHopDong" placeholder='dd/mm/yyyy' required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Ngày hết hiệu lực hợp đồng</h5>
                        <input type="text" class="form-control" data-name="NgayHetHieuLucHopDong" placeholder='dd/mm/yyyy' required>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSave">Lưu</button>
                <button type="button" class="btn btn-danger" id="btnCloseHopDongThueDat" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>