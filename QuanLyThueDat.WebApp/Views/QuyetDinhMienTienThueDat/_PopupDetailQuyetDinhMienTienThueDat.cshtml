@{
    Layout = null;
}
<div class="modal fade" id="popupDetailQuyetDinhMienTienThueDat" data-backdrop="static" role="dialog">
    <div class="modal-dialog modal-xl">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm mới quyết định miễn tiền thuê đất</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="min-height:600px">
                <div class="row col-sm-12" id="FormDetailQuyetDinhMienTienThueDat">
                    <div class="form-group col-md-6">
                        <h5>Số quyết định miễn tiền thuê đất</h5>
                        <input type="hidden" class="form-control" data-name="IdQuyetDinhMienTienThueDat" value="0">
                        <input type="text" class="form-control" data-name="SoQuyetDinhMienTienThueDat" required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Doanh nghiệp</h5>
                        <select class="form-control select2 ddDoanhNghiep" style="width: 100%;">
                        </select>
                    </div>
@*                    <div class="form-group col-md-6">
                        <h5>Quyết định thuê đất</h5>
                        <select class="form-control select2 ddQuyetDinhThueDat" style="width: 100%;">
                        </select>
                    </div>*@
                    <div class="form-group col-md-6">
                        <h5>Ngày ký quyết định miễn tiền thuê đất</h5>
                        <input type="text" class="form-control" data-name="NgayQuyetDinhMienTienThueDat" placeholder='dd/mm/yyyy' required>
                    </div>
                    
                    <div class="form-group col-md-6">
                        <h5>Tên quyết định miễn tiền thuê đất</h5>
                        <input type="text" class="form-control" data-name="TenQuyetDinhMienTienThueDat" required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Diện tích miễn tiền thuê đất</h5>
                        <input type="text" class="form-control" data-name="DienTichMienTienThueDat" required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Thời hạn miễn tiền thuê đất</h5>
                        <input type="text" class="form-control" data-name="ThoiHanMienTienThueDat" required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Ngày quyết định có hiệu lực</h5>
                        <input type="text" class="form-control" data-name="NgayHieuLucMienTienThueDat" placeholder='dd/mm/yyyy' required>
                    </div>
                    <div class="form-group col-md-6">
                        <h5>Ngày quyết định hết hiệu lực</h5>
                        <input type="text" class="form-control" data-name="NgayHetHieuLucMienTienThueDat" placeholder='dd/mm/yyyy' required>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveQuyetDinhMienTienThueDat">Lưu</button>
                <button type="button" class="btn btn-danger" id="btnCloseQuyetDinhMienTienThueDat" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>