@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Phân quyền cho cán bộ chuyên quản khu vực</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Phân quyền cho cán bộ </li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
</section>
<section>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header border-0">
                            <h3 class="card-title">Danh sách chuyên viên phụ trách khu vực </h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group col-md-12">
                                <label>
                                    Chọn Cán bộ
                                </label>
                                @*<input type="text" id="dsDaiBieu" placeholder="Vui lòng chọn" autocomplete="off" data-id="" />*@

                                <div class="form">
                                    <div id="dsCanBo"></div>

                                </div>
                            </div>
                            <button type="button" class="btn btn-primary" style="float:right" id="btn-save">Phân quyền</button>
                        </div>

                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header border-0">
                            <h3 class="card-title">Danh sách quyết định thuê đất</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group col-md-12">
                                <label>
                                    Chọn Quyết định thuê đất để phân quyền
                                </label>
                                @*<input type="text" id="dsDaiBieu" placeholder="Vui lòng chọn" autocomplete="off" data-id="" />*@

                                <div class="form">
                                    <div id="treeview2"></div>
                                    <div class="selected-container" style="display: none">
                                        Các dự án đã chọn
                                        <div id="dsQuyetDinhThueDat"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- /.col-md-6 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
</section>
<div id="modalDetailThongBaoTienSuDungDat"></div>
@section Scripts{
<script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment-with-locales.min.js"></script>
<script src="~/js/controller/PhanQuyenCanBoControl.js"></script>
}