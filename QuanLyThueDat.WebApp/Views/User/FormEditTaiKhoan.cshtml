
<div id="modal-add-edit" class="modal modal-primary fade" style="display: none;" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm mới tài khoản</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="min-height:600px">
                <div class="card" style="width: 100%">
                    <div class="card-header d-flex">
                        <h2 class="card-title">Thông tin tài khoản</h2>
                    </div>
                    <div class="card-body">
                        <div class="row col-sm-12" id="FormDetailTaiKhoan">
                            <div class="form-group col-md-6">
                                <div class="d-flex">
                                    <h5>Tên cán bộ</h5>
                                </div>
                                <input type="hidden" class="form-control" data-name="UserId" value= "00000000-0000-0000-0000-000000000000">
                                <input type="text" class="form-control" data-name="HoTen" required>
                            </div>
                            <div class="form-group col-md-6">
                                <h5>Tài khoản đăng nhập</h5>
                                <input type="text" class="form-control" data-name="UserName" required>
                            </div>
                            <div class="form-group col-md-6">
                                <h5>Mật khẩu</h5>
                                <input type="text" class="form-control" data-name="Password" required placeholder="Ít nhất 1 chữ hoa, 1 chữ thường, số và 1 ký tự đặc biệt">
                            </div>
                            <div class="form-group col-md-6">
                                <h5>Nhập lại mật khẩu</h5>
                                <input type="text" class="form-control" data-name="RePassword" required>
                            </div>
                            <div class="form-group col-md-6">
                                <h5>Số điện thoại</h5>
                                <input type="text" class="form-control" data-name="PhoneNumber" required>
                            </div>
                            <div class="form-group col-md-6">
                                <h5> Email</h5>
                                <input type="text" class="form-control" data-name="Email" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card" style="width: 100%">
                    <div class="card-header d-flex">
                        <h2 class="card-title">Phân quyền tài khoản</h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="roleLanhDaoBan" name="role" value = "LANHDAOBAN">
                                    <label for="roleLanhDaoBan">
                                        Lãnh đạo Ban
                                    </label>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="roleTruongPhong" name="role" value = "TRUONGPHONG">
                                    <label for="roleTruongPhong">
                                        Trưởng phòng
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="roleChuyenVienChuyenQuan" name="role" value="CHUYENVIENCHUYENQUAN">
                                    <label for="roleChuyenVienChuyenQuan">
                                        Chuyên viên chuyên quản
                                    </label>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="roleChuyenVienPhuTrachKV" name="role" value="CHUYENVIENPHUTRACHKV">
                                    <label for="roleChuyenVienPhuTrachKV">
                                        Chuyên viên phụ trách khu vực
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveTaiKhoan">Lưu</button>
                <button type="button" class="btn btn-danger" id="btnClose" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
